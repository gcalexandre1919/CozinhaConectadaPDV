<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="app.css" rel="stylesheet" />
    <HeadOutlet />
</head>

<body>
    <div id="app">
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                @{
                    var isLoginPage = routeData.PageType?.Name == "Login" || routeData.PageType?.Name == "Register";
                }
                @if (isLoginPage)
                {
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(SistemaPDV.Web.Components.Layout.LoginLayout)" />
                }
                else
                {
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                }
                <FocusOnNavigate RouteData="@routeData" Selector="h1" />
            </Found>
            <NotFound>
                <PageTitle>N√£o encontrado</PageTitle>
