@page "/login"
@using SistemaPDV.Core.DTOs
@using SistemaPDV.Web.Services
@inject IAuthWebService AuthService
@inject NavigationManager Navigation

<PageTitle>Login - Sistema PDV</PageTitle>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold">Cozinha Conectada</h3>
                        <p class="text-muted">Sistema PDV para Restaurantes</p>
                    </div>

                    @if (!string.IsNullOrEmpty(mensagemErro))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>@mensagemErro
                        </div>
                    }

                    @if (efetuandoLogin)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-spinner fa-spin me-2"></i>Verificando credenciais...
                        </div>
                    }

                    <form @onsubmit="@FazerLogin" @onsubmit:preventDefault="true">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="email" id="email" class="form-control" placeholder="seu@email.com" 
                                       autocomplete="email" 
                                       @bind="loginDto.Email" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="senha" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" id="senha" class="form-control" placeholder="Sua senha"
                                       autocomplete="current-password"
                                       @bind="loginDto.Password" required />
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@efetuandoLogin">
                                @if (efetuandoLogin)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Entrando...</span>
                                }
                                else
                                {
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    <span>Entrar</span>
                                }
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <div class="alert alert-info">
                            <small>
                                <strong>üí° Credenciais de Teste:</strong><br>
                                Email: <code>admin@sistema.com</code><br>
                                Senha: <code>123456</code>
                            </small>
                        </div>
                        <a href="/register" class="btn btn-link">
                            <i class="fas fa-user-plus me-2"></i>Criar nova conta
                        </a>
                    </div>

                    <!-- Bot√£o tempor√°rio at√© API funcionar -->
                    <div class="d-grid mt-3">
                        <a href="/dashboard" class="btn btn-warning">
                            <i class="fas fa-tools me-2"></i>
                            Acesso Tempor√°rio (API offline)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginDto loginDto = new() { Email = "admin@sistema.com", Password = "123456" };
    private string mensagemErro = string.Empty;
    private string mensagemSucesso = string.Empty;
    private bool efetuandoLogin = false;
    private bool apiOffline = false;

    protected override void OnInitialized()
    {
        // Verificar se h√° mensagem de sucesso na URL
        var uri = new Uri(Navigation.Uri);
        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);
        if (queryParams.ContainsKey("message"))
        {
            mensagemSucesso = queryParams["message"].FirstOrDefault() ?? "";
        }
    }

    private async Task FazerLogin()
    {
        try
        {
            efetuandoLogin = true;
            mensagemErro = string.Empty;
            mensagemSucesso = string.Empty;
            apiOffline = false;
            StateHasChanged();

            // Valida√ß√£o b√°sica
            if (string.IsNullOrWhiteSpace(loginDto.Email) || string.IsNullOrWhiteSpace(loginDto.Password))
            {
                mensagemErro = "Por favor, preencha todos os campos.";
                return;
            }

            // Tentar login na API
            var resultado = await AuthService.LoginAsync(loginDto);
            
            if (resultado.Sucesso)
            {
                mensagemSucesso = "Login realizado com sucesso! Redirecionando...";
                StateHasChanged();
                
                // Aguardar um pouco e redirecionar
                await Task.Delay(1000);
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                mensagemErro = resultado.Erro ?? "Email ou senha incorretos";
            }
        }
        catch (HttpRequestException)
        {
            // API offline
            apiOffline = true;
            mensagemErro = "API est√° offline. Use o bot√£o de acesso de emerg√™ncia ou tente novamente mais tarde.";
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro de conex√£o: {ex.Message}";
            apiOffline = true;
        }
        finally
        {
            efetuandoLogin = false;
            StateHasChanged();
        }
    }
}
